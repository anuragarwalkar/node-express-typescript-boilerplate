  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.4.1",
    "http-status": "^1.5.0",
    "mongoose": "^5.11.16",
    "morgan": "^1.10.0",
    "winston": "^3.3.3"
